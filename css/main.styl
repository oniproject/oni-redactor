*
	-webkit-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

.area
	background: #fff
	position: absolute
	border: 4px dotted silver
	box-sizing: border-box

#app
	position: fixed
	width: 100%
	height: 100%
	background: #ccc

html, body
	margin: 0
	padding: 0
	width: 100%
	height: 100%
	background: #ccc
	overflow: hidden

.handler
	position: absolute
	background: red

	&.vertical
		height: 100%
		width: 2px
		cursor: col-resize
	&.horizontal
		height: 2px
		width: 100%
		cursor: row-resize

.split
	position: absolute
	font-size: 25px
	line-height: 10px
	background: transparent
	color: black
	text-align: center

	&.horizontal
		bottom: 0
		left: 0
		&:after
			content: '⍏'

	&.vertical 
		top: 0
		right: 0
		&:before
			content: '⍅'


